#app
  position relative
  font-size 14px

.row-container
  >div
    float left
    width 100%
  &:before
  &:after
    content ''
    display table
    clear both

.form-item
  padding 0 8px
  margin 16px 0
  &.row-container>div
    padding 0 8px

.left
  float left
.force-left
  position absolute
  left 0
  top 0

.right
  float right
.force-right
  position absolute
  right 0
  top 0

.feed-description-left
  position relative
  margin 16px
  padding-right 56px

.feed-input-cont
  margin 16px 8px
  padding 0 8px

.app-checkbox, .app-radio
  display inline-block
  width _inp_s
  height _inp_s

.a-cont
  a
    color _dark_oper_color
    &:hover
      color _bright_oper_color

.app-wrapper
  position relative

.app-header
  font-size 24px !important
  padding 0 8px
  color _white_color
  background-color _dark_oper_color
  width 100%
  overflow hidden
  white-space: nowrap;
  text-overflow: ellipsis;
  > *
    display inline-block
    padding 8px
  .app-menu-toggle
    cursor pointer
  &.modal
    padding-right 50px
    .btn-close
      position absolute
      top 8px
      right 16px
      padding 0
      cursor pointer

.app-nav-wrapper
  position absolute
  top 0
  left 0
  width _menu_w
  font-size 24px !important

.app-nav-cont
  background transparent

.app-nav-feed
  margin 8px
  padding 8px
  background _white_color
  border 1px solid _white_color
  div
    width 100%
    display block
    padding 8px 0
    text-align left
    outline none
    white-space normal
    float none
    user-select none
    &.group-item
      padding 0
  span.oper
    cursor pointer
  a,span.oper,label[prm]
    color _light_color
    &:hover
      cursor pointer
      color _bright_oper_color

.feed-row
  margin 8px 0;

.feed-top-nav
  padding 16px 32px 0
  position relative
  &[full-width]
    padding 16px 16px 0
  >div:not(.container)
    margin-left 26px
    &.h
      font-size 24px
  >a
    font-size 24px
    float left
    color _light_color
    &:hover
      color _bright_oper_color


.feed-item
  padding 0 16px
  margin 16px 0

.feed-item-first
  padding 16px 16px 0
  margin-bottom  16px

.feed-item-last
  padding 0 16px 16px
  margin-top 16px

.app-content-wrapper
  margin-left 0

.card-container
  padding 0 16px 16px
  overflow auto
  clear both

.card-container-title
  padding 16px 16px 0

.card-wrapper
  float left

.card-header
  padding 16px

.card
  position relative
  margin 16px
  box-shadow _shadow_card

.card-name
  &[prm]
    color _dark_oper_color
    cursor pointer
    &[feed]
      font-weight bold

.card-details-container
  border-bottom 1px solid #ccc
  .details
    overflow auto

.tabs-up-cont,
.tabs-down-cont
  background _white_color
  margin 0
  &:before, &:after
    display table
    content " "
    clear both
  li
    position relative
    display block
    float left
    >div
      position relative
      display block
      color _dark_color
      font-weight bold
      cursor default
      background-color _white_color
      border 1px solid _light_color
      &.btn-wrapper
        border none
        background-color _white_color
        >div
          padding 8px 16px
  &[last-right] li:last-child
    float right
.tabs-up-cont
  border-top 1px solid _light_color
  li
    margin -1px 10px 0 0
    >div
      padding 11px 16px 7px
      border-radius 0 0 4px 4px
      border-top-color transparent
      &.btn-wrapper
        padding 2px 0 0
        margin 2px 0 0
  &[last-right] li:last-child
    margin -1px 0 0 10px
.tabs-down-cont
  border-bottom 1px solid _light_color
  li
    margin 0 10px -1px 0
    >div
      padding 7px 16px 11px
      border-radius 4px 4px 0 0
      border-bottom-color transparent
      &.btn-wrapper
        padding 0 0 2px
        margin 0 0 2px
  &[last-right] li:last-child
    margin 0 0 -1px 10px

.app-msg
  margin 0
  padding 8px 16px
  overflow auto
  color _dark_color
  background-color _white_color
  &:empty
    display none
  &.hint-msg
    background-color _back_hint_color
    border-left 8px solid _dark_hint_color
  &.error-msg
    background-color _back_warn_color
    border-left 8px solid _dark_warn_color
  &.ok-msg
    background-color _back_ok_color
    border-left 8px solid _dark_ok_color

.btn
  border none
  border-radius 4px
  font-weight normal
  color _white_color
  background-color _bright_oper_color
  opacity 0.60
  text-align center
  cursor pointer
  white-space nowrap
  user-select none
  &:hover
    opacity 1
    box-shadow: _shadow_btn

.oper-wrapper
  position relative
  overflow auto
  .btn-left
    float left
    line-height 36px
    color _dark_oper_color
    &:hover
      cursor pointer
      color _bright_oper_color
  .oper-container
    float right
    button
      float left
      padding 8px 16px
      margin-left 16px
    i.fa
      float left
      padding 8px 16px
      margin-left 16px
      border 1px solid _light_color
      border-radius 4px
      color _light_color
      text-align center
      cursor pointer
      white-space nowrap
      user-select none
      &:hover
        color _bright_oper_color
        box-shadow: _shadow_btn

// modal && overlay
.app-modal
.app-overlay
  z-index: 1000
  display: block
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 100%
  overflow: auto
.app-modal
  padding-top: 50px
  background-color: rgba(0,0,0,0.4)
.app-overlay
  background-color: _white_color

.modal-content-wrapper
.overlay-content-wrapper
  margin: auto
  position: relative
  padding: 0
  outline: 0
.modal-content-wrapper
  background-color: _white_color
  width: _modal_w
  box-shadow _shadow_card
.overlay-content-wrapper
  max-width _form_w * 2.5

// without menu
@media (max-width _menu_w + _card_w - 1)
  .app-nav-feed
    border 1px solid _light_color
    box-shadow _shadow_card
  .app-nav-cont[show]
    display block
  .app-nav-cont:not([show])
    display none
  .feed-top-nav
    padding 16px 16px 0
  .card-container
    padding 0

// with menu
@media (min-width _menu_w + _card_w)
  .app-content-wrapper
    margin-left _menu_w
  .app-nav-cont
    display block
  .app-menu-toggle
    display none

// 1 column
@media (max-width _menu_w + _card_w * 2 - 1)
  .card-wrapper
    width 99.99999%

// 2 columns
@media (min-width _menu_w + _card_w * 2)
  .card-wrapper
    width 49.99999%
    &:nth-child(2n)
      clear left

// 3 columns
@media (min-width _menu_w + _card_w * 3)
  .card-wrapper
    width 33.33333%
    &:nth-child(2n)
      clear none
    &:nth-child(3n + 2)
      clear left

// wodal && auth width settings
@media (max-width _modal_w)
  .modal-content-wrapper
    margin 0 16px
    width auto !important
  form.auth
    width 90% !important

@media (max-width _modal_w * 1.2)
  .modal-content-wrapper
    width _modal_w * .9

@media (min-width _modal_w * 1.6)
  .modal-content-wrapper
    width: _modal_w * 1.2
  form.auth
    width 40%

@media (min-width _form_w * 2 + 1)
  .row-container
    >div
      &.pr1
        width 16.66666%
      &.pr2
        width 33.33333%
      &.pr3
        width 49.99999%
      &.pr4
        width 66.66666%
      &.pr5
        width 83.33333%


@media (min-width _form_w + 1) && (max-width _form_w * 2)
  .row-container
    >div
      &.pr1
        width 33.33333%
      &.pr2
        width 66.66666%
